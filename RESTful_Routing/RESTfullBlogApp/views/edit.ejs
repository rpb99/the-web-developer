<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		
		<div class="field">
			<label for="title">Title</label>
			<input type="text" name="blog[title]" placeholder="title" Value="<%= blog.title %>">
		</div>

		<div class="field">
			<label for="image">Image</label>
			<input type="text" name="blog[image]" placeholder="image" Value="<%= blog.image %>">
		</div>

		<div class="field">
			<label for="body">Blog Content</label>
			<textarea name="blog[body]"><%= blog.body %></textarea>
		</div>

		<button class="ui green big basic button">Submit</button>
		
	</form>
</div>

<% include ./partials/footer %>